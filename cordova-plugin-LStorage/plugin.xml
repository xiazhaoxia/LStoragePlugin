<?xml version='1.0' encoding='utf-8'?>
<plugin id="LStorage" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-LStorage</name>
    <js-module name="LStorage" src="www/cordova-plugin-LStorage.js">
        <clobbers target="cordova.plugin.lstorage" />
    </js-module>

    <platform name="android">
    	<config-file target="res/xml/config.xml" parent="/*">
    		<feature name="LStorage">
    			<param name="android-package" value="com.suxia.plugins.LStorage"/>    			
    		</feature>
    	</config-file>
    	<source-file src="src/android/LStorage.java" target-dir="com/suxia/plugins"/>

    </platform>
</plugin>
